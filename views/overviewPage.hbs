<!DOCTYPE html>
<html>
<head>
<title>Menu</title>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Amatic+SC">
<link rel="stylesheet" type="text/css" href="../styles/style.css">
<link href="https://fonts.googleapis.com/css2?family=Jost:wght@500&display=swap" rel="stylesheet">

<script>
  let one = 0
  let two = 0
  let three = 0
  let four = 0
  let five = 0

  window.addEventListener("load", (event) => {
    idsList = ["oneshow", "twoshow", "threeshow", "fourshow", "fiveshow"]
    for(let i=0; i<idsList.length; i++){
      document.getElementById(idsList[i]).value = 0
    }
  });
  function add(number, id){
    if(number==10){
      return 10
    }
    number++
    document.getElementById(id).value = number
    return number
  }
  function remove(number, id){
    if(number==0){
      return 0
    }
    number--
    document.getElementById(id).value = number
    return number
  }

  function oneadd(){one = add(one, "oneshow")}
  function twoadd(){two = add(two, "twoshow")}
  function threeadd(){three = add(three, "threeshow")}
  function fouradd(){four = add(four, "fourshow")}
  function fiveadd(){five = add(five, "fiveshow")}

  function oneremove(){one = remove(one, "oneshow")}
  function tworemove(){two = remove(two, "twoshow")}
  function threeremove(){three = remove(three, "threeshow")}
  function fourremove(){four = remove(four, "fourshow")}
  function fiveremove(){five = remove(five, "fiveshow")}
  
  function settotal(){
    document.getElementById("total").value = 
      document.getElementById("oneshow").value + "," +
      document.getElementById("twoshow").value + "," +
      document.getElementById("threeshow").value + "," +
      document.getElementById("fourshow").value + "," +
      document.getElementById("fiveshow").value
  }
  
</script>

</head>
<body>
<div>
    <div class="w3-top">
        <div class="w3-bar w3-white w3-padding w3-card" style="letter-spacing:4px;">
            <div class="w3-right w3-hide-small">
            <a href="menu" class="w3-bar-item w3-button">MENU</a>
            <a href="contact" class="w3-bar-item w3-button">CONTACT</a>
            </div>
        </div>
    </div>

<hr>
    <div class="w3-row w3-padding-64" id="menu">
      <div class="w3-col l6 w3-padding-large">
        <h1 class="w3-center">Our Main Meals</h1><br>
        <h4>White Rice with Beans</h4>
        <p class="w3-text-grey">Get yourself a nutritious meal with the cheapest price  <br><strong><em>Kshs. 250</em></strong></p><br>
      
        <h4>Chapati with Githeri</h4>
        <p class="w3-text-grey">This package comes with 4 Chapatis and Githeri (beans and maize) <br><strong><em>Kshs. 260</em></strong></p>    
      
        <h4>Chips and Fillet</h4>
        <p class="w3-text-grey">Enjoy the ordinary but with a little style (comes with 2 fillets) <br><strong><em>Kshs. 500</em></strong></p><br>
      
        <h4>Mashed Potatoes and Beef Stew</h4>
        <p class="w3-text-grey">Get yourself some tasty soup with easy-to-chew carbs <br><strong><em>Kshs. 550</em></strong></p><br>
      
        <h4>Saffron Rice with Whole Fish</h4>
        <p class="w3-text-grey">Ever tasted the best rice in West Africa and an entire Fish all in one meal? <br><strong><em>Kshs. 600</em></strong></p><br>
      
      </div>
    
      <div class="w3-col l6 w3-padding-large">
        <button onclick="oneadd()" id="oneadd" style="margin-top:150px;">+</button>
        <button onclick="oneremove()" id="oneremove">-</button>
        <input disabled id="oneshow">
        <br>
        <button onclick="twoadd()" id="twoadd" style="margin-top:100px">+</button>
        <button onclick="tworemove()" id="tworemove">-</button>
        <input disabled id="twoshow">
        <br>
        <button onclick="threeadd()" id="threeadd" style="margin-top:100px">+</button>
        <button onclick="threeremove()" id="threeremove">-</button>
        <input disabled id="threeshow">
        <br>
        <button onclick="fouradd()" id="fouradd" style="margin-top:100px">+</button>
        <button onclick="fourremove()" id="fourremove">-</button>
        <input disabled id="fourshow">
        <br>
        <button onclick="fiveadd()" id="fiveadd" style="margin-top:100px">+</button>
        <button onclick="fiveremove()" id="fiveremove">-</button>
        <input disabled id="fiveshow">
        <br>
        <p style="margin-bottom:15px;"></p>
        <form action="/calculate" method="post">
          <input name="total" id="total" style="display:none">
          <button onclick="settotal()" id="charge" style="margin-top:15px;width:110px;border:3px solid red;padding:5px;background-color:blue;color:white;border-radius:20px;" type="submit">Get Charges</button>
        </form>
      </div>

      <div class="w3-col l6 w3-padding-large">
        <img src="../images/table.jpg" class="w3-round w3-image w3-opacity-min" alt="Menu" style="height:70vh;float:right;margin-top:-700px;margin-bottom:0vh;">
      </div>
    </div>

  <hr>
</div>
</div>
</body>
</html>